        change -= 0.5
        coin_half += 1
        counter += 1
    if change // 0.2 > 0:
        change -= 0.2
        coin_twenty += 1
        counter += 1
    if change // 0.1 > 0:
        change -= 0.1
        coin_ten += 1
        counter += 1
    if change // 0.05 > 0:
        change -= 0.05
        coin_five += 1
        counter += 1
    if change // 0.02 > 0:
        change -= 0.02
        coin_two += 1
        counter += 1
    if change % 0.01 > 0:
        change = 0
        coin_one += 1
        counter += 1
    break

if change == 0:
    print(counter)
